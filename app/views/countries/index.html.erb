<% if User.current.allowed_to?(:global_view_catalogs, nil, :global => true) %>
  <div class="contextual">
    <%= link_to(t('country.action.new.title'), {:controller => 'countries', :action => 'new'}, :class => 'icon icon-add') if User.current.allowed_to?(:global_edit_catalogs, nil, :global => true) %>
    <%= link_to(t('catalog.global.title', count: 2), {:controller => 'catalogs', :action => 'index'}, :class => 'icon icon-list') %>
  </div>

  <h2><%= t('country.title', count: 2) %></h2>

  <%= render partial: 'table', locals: { countryes: @countries } %>
<% else %>
  <p class="nodata"><%=t('permission.denied.message')%></p>
<% end %>
