<% if User.current.allowed_to?(:global_view_catalogs, nil, :global => true) %>
  <% allow_edit = User.current.allowed_to?(:global_edit_catalogs, nil, :global => true) %>
  <div class="contextual">
    <%= link_to(t('country.action.new.title'), {:controller => 'countries', :action => 'new'}, :class => 'icon icon-add') if allow_edit %>
    <%= link_to(t('country.action.edit.title'), {:controller => 'countries', :action => 'edit', :id => @country.id}, :class => 'icon icon-edit') if allow_edit && !@country.blank? %>
    <%= link_to(t('country.action.delete.title'), {:controller => 'countries', :action => 'destroy', :id => @country.id}, :class => 'icon icon-del') if allow_edit && !@country.blank? %>
  </div>
  <% content_for :sidebar do %>
    <ul id="options">
      <li><%= link_to(t('country.action.new.title'), {:controller => 'countries', :action => 'new'}, :class => 'icon icon-add') if allow_edit %></li>
      <li><%= link_to(t('country.action.edit.title'), {:controller => 'countries', :action => 'edit', :id => @country.id}, :class => 'icon icon-edit') if allow_edit && !@country.blank? %></li>
      <li><%= link_to(t('country.action.delete.title'), {:controller => 'countries', :action => 'destroy', :id => @country.id}, :class => 'icon icon-del') if allow_edit && !@country.blank? %></li>
    </ul>
  <% end %>
  <h2><%= t('country.title', count: 1) %></h2>
  <% if !@country.blank? %>
    <p>
      <%= t('country.attr.name') %>:
      <%= @country.name %>
    </p>
    <p>
      <%= t('country.attr.coordinates') %>:
      <%= @country.coordinates %>
    </p>
    <%= link_to t('button_cancel'), {:controller => 'countries', :action => 'index'} %>
  <% else %>
    <p class="nodata"><%=t('data.empty.message')%></p>
  <% end %>
<% else %>
  <p class="nodata"><%=t('permission.denied.message')%></p>
<% end %>
