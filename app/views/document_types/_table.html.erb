<table class="list">
  <thead>
    <tr>
      <%= sort_header_tag('name', caption: t('document_type.attr.name')) %>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% document_types.each do |et| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= et.name %></td>
      <td class="action">
        <%= link_to l(:button_edit),
                            {:controller => 'document_types', :action => 'edit', :id => et.id},
                            :class => 'icon icon-only icon-edit', :title => l(:button_edit),
                            :accesskey => accesskey(:edit) %>
      </td>
      <td class="action">
        <%= link_to l(:button_copy),
                            {:controller => 'document_types', :action => 'copy', :id => et.id},
                            :class => 'icon icon-only icon-copy', :title => l(:button_copy),
                            :accesskey => accesskey(:copy) %>
      </td>
      <td class="action">
        <%= delete_link({ :controller => 'document_types', :action => 'destroy', :id => et.id}, class: 'icon icon-only icon-del', title: l(:button_delete)) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
