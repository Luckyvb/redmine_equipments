<% if User.current.allowed_to?(:global_view_catalogs, nil, :global => true) %>
  <div class="contextual">
    <%= link_to(t('service_result_type.action.new.title'), {:controller => 'service_result_types', :action => 'new'}, :class => 'icon icon-add') if User.current.allowed_to?(:global_edit_catalogs, nil, :global => true) %>
    <%= link_to(t('catalog.title', count: 2), {:controller => 'catalogs', :action => 'index'}, :class => 'icon icon-list') %>
  </div>

  <h2><%= t('service_result_type.title', count: 2) %></h2>

  <%= render partial: 'table', locals: { types: @types } %>
<% else %>
