<% if User.current.allowed_to?(:global_view_catalogs, nil, :global => true) %>
  <% allow_edit = User.current.allowed_to?(:global_edit_catalogs, nil, :global => true) %>
  <div class="contextual">
    <%= link_to(t('service_result_type.action.new.title'), {:controller => 'service_result_types', :action => 'new'}, :class => 'icon icon-add') if allow_edit %>
    <%= link_to(t('service_result_type.action.edit.title'), {:controller => 'service_result_types', :action => 'edit', :id => @service_result_type.id}, :class => 'icon icon-edit') if allow_edit %>
    <%= link_to(t('service_result_type.action.delete.title'), {:controller => 'service_result_types', :action => 'destroy', :id => @service_result_type.id}, :class => 'icon icon-del') if allow_edit %>
  </div>
  <% content_for :sidebar do %>
    <ul id="options">
      <li><%= link_to(t('service_result_type.action.new.title'), {:controller => 'service_result_types', :action => 'new'}, :class => 'icon icon-add') if allow_edit %></li>
      <li><%= link_to(t('service_result_type.action.edit.title'), {:controller => 'service_result_types', :action => 'edit', :id => @service_result_type.id}, :class => 'icon icon-edit') if allow_edit %></li>
      <li><%= link_to(t('service_result_type.action.delete.title'), {:controller => 'service_result_types', :action => 'destroy', :id => @service_result_type.id}, :class => 'icon icon-del') if allow_edit %></li>
    </ul>
  <% end %>
  <h2><%= t('service_result_type.title', count: 1) %></h2>
  <% if !@service_result_type.blank? %>
    <p><%= t('service_result_type.attr.equipment_type') %>:<%= link_to @service_result_type.equipment_type.name, {:controller => 'equipment_types', :action => 'show', :id => @service_result_type.equipment_type.id}, :class => 'fas fa-info-circle' %></p>
    <p><%= t('service_result_type.attr.service_type') %>:<%= link_to @service_result_type.service_type.name, {:controller => 'service_types', :action => 'show', :id => @service_result_type.service_type.id}, :class => 'fas fa-info-circle' %></p>
    <p><%= t('service_result_type.attr.name') %>:<%= @service_result_type.name %></p>
    <p><%= t('service_result_type.attr.value_format') %>:<%= l('value_format.'+@service_result_type.value_format.to_s.downcase+'.title', count: 1) %></p>
    <p><%= t('service_result_type.attr.description') %>:<%= @service_result_type.description %></p>
    <%= link_to t('button_cancel'), {:controller => 'service_result_types', :action => 'index'} %>
  <% else %>
    <p class="nodata"><%=t('data.empty.message')%></p>
  <% end %>
<% else %>
  <p class="nodata"><%=t('permission.denied.message')%></p>
<% end %>
